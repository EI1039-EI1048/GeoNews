<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <!-- LAS LOCALIZACIONES A MOSTRAR   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/place_name_output"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:text="Location"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/add_to_favorites_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Fav" />

                <TextView
                    android:id="@+id/coords_output"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:text="Coords"
                    android:textSize="25dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_location_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="98dp" />

    <EditText
        android:id="@+id/location_input"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_location_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="232dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Topónimo o coordenadas" />

    <Button
        android:id="@+id/add_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Añadir ubicación" />


</RelativeLayout>